    <Action name="MergeResults">
      <Path value="[$smvOutputDir]" />
      <Env key="PATH" value="%nullcheckap%\bin\engine\;%PATH%" />
      <Command value="fastavn" arguments="build\test_inst.bpl /mergeEntrypointBugsOnly > merge.txt 2>merge.err" />
