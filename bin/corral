#!/usr/bin/env bash

# Wrapper script to run Corral.exe on non-Windows systems using Mono
#
# Adapted from https://github.com/Microsoft/dafny/blob/master/Binaries/dafny

MONO=$(which mono)

# find the source directory for this script even if it's been symlinked
# from https://stackoverflow.com/questions/59895/
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do
    DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
    SOURCE="$(readlink "$SOURCE")"
    [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
CORRAL_ROOT="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
BUILD_TYPE="Debug"
CORRAL="$CORRAL_ROOT/$BUILD_TYPE/corral.exe"

if [[ ! -x "$MONO" ]]; then
    echo "Error: Corral requires Mono to run on non-Windows systems."
    exit 1
fi

if [[ ! -e "$CORRAL" ]]; then
    echo "Error: Corral.exe not found at $CORRAL."
    exit 1
fi

"$MONO" "$CORRAL" "$@"
